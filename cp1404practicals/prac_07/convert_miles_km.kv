BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_miles
            text:
            font_size: 48
            size_hint: (2.5, 1)
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Up"
                on_press: app.handle_increment(float(input_miles.text), 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(float(input_miles.text), -1)
    Button:
        text: "Convert m to km"
        on_press: app.handle_calculate(float(input_miles.text))
    Label:
        id: output_label
        text: ""
        color: (1, 1, 0, 1)

